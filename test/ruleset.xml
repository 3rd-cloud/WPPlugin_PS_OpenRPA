<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WordPress Security Check" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
	<description>WordPress セキュリティチェックのみ行うルールセットです。</description>

	<file>../src/plugins</file>

	<exclude-pattern>*/.git/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<arg value="sp" />
	<arg name="basepath" value="." />
	<arg name="colors" />
	<arg name="extensions" value="php" />
	<arg name="parallel" value="50" />

	<arg name="cache" value="./phpcs2.cache" />

	<rule ref="WordPress.Security" />

</ruleset>